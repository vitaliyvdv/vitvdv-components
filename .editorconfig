root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.html]
indent_style = space
indent_size = 2
end_of_line = lf

[*.js]
indent_style = space
indent_size = 2
end_of_line = lf

[*.vue]
indent_style = space
indent_size = 2
end_of_line = lf

[*.scss]
indent_style = space
indent_size = 2
end_of_line = lf

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[{package.json}]
indent_style = space
indent_size = 2
